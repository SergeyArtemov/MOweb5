                    <div class="row">
                        <div class="col">
                            <label asp-for="Surname">Фамилия:</label>
                            <!--<input id="Surname" class="form-control is-valid" asp-for="Surname" />-->
                            <input id="Surname" class="form-control" asp-for="Surname" />
                        </div>
                        <div class="col">
                            <label asp-for="Name">Имя:</label>
                            <!--<input id="Name" class="form-control is-invalid" asp-for="Name" />-->
                            <input id="Name" class="form-control" asp-for="Name" />
                        </div>
                        <div class="col">
                            <label asp-for="Patronimic">Отчество:</label>
                            <input id="Patronimic" class="form-control" asp-for="Patronimic" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="PassRange">Серия паспорта:</label>
                            <input id="PassRange" class="form-control" asp-for="PassRange" />
                        </div>
                        <div class="col">
                            <label asp-for="PassNumber">Номер паспорта:</label>
                            <input id="PassNumber" class="form-control" asp-for="PassNumber" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="PassIssueDate">Дата выдачи паспорта:</label>
                            <input id="PassIssueDate" class="form-control" asp-for="PassIssueDate" />
                        </div>
                        <div class="col">
                            <label asp-for="Birthday">День рождения:</label>
                            <input id="Birthday" class="form-control" asp-for="Birthday" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="PassDepartmentCode">Код департамента выдачи паспорта:</label>
                            <input id="PassDepartmentCode" class="form-control" asp-for="PassDepartmentCode" />
                        </div>
                        <div class="col">
                            <label asp-for="PassDepartmentAddr">Адрес выдачи паспорта:</label>
                            <input id="PassDepartmentAddr" class="form-control" asp-for="PassDepartmentAddr" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="PassRegisteredAddress">Адрес регистрации:</label>
                            <input id="PassRegisteredAddress" class="form-control" asp-for="PassRegisteredAddress" />
                        </div>
                    </div>
                    <hr color="green" width="300">
                    <div class="row">
                        <div class="col">
                            <label asp-for="Inn">ИНН:</label>
                            <input id="DeliveryINN" class="form-control" asp-for="Inn" />
                        </div>
                    </div>
                    <input id="PageNext" class="form-control" asp-for="PageNext" hidden />
                    <input id="PageForShow" class="form-control" asp-for="PageForShow" hidden />
                    <input id="Customerid" class="form-control" asp-for="Customerid" hidden />
                    <input id="Host" class="form-control" asp-for="Host" hidden />
                </div>
            
