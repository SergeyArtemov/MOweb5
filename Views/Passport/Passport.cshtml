<form class="p-a-1" asp-action="RsvpForm" method="post" id="PasspForm">


    <button hidden type="submit" formaction="~/Passport/RsvpForm">ОК</button>

    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">

            <div page-model="@Model" page-action="List" page-classes-enabled="true"
                 page-class="btn" page-class-normal="btn-secondary"
                 page-class-selected="btn-primary" class="btn-group pull-right m-1">
            </div>

            @if (@Model.PageForShow == 1)
            {
                <div>


                    @if (@Model.LegalRF == 2)
                    {
                        <div id="blink7">
                            <center>
                                <label>ПАСПОРТНЫЕ ДАННЫЕ и ИНН - ВЕРНЫ!!!</label>
                            </center>
                        </div>
                    }

                    @if (@Model.LegalRF == 1)
                    {
                        <div id="blink71">
                            <center>
                                <label>ПАСПОРТНЫЕ ДАННЫЕ - ВЕРНЫ, ИНН - НЕВЕРНЫЙ!!!</label>
                            </center>
                        </div>
                    }

                    @if (@Model.LegalRF != 2 && @Model.LegalRF != 1)
                    {
                        <div id="blink72">
                            <center>
                                <label><label>ПАСПОРТНЫЕ ДАННЫЕ и ИНН - НЕВЕРНЫ!!!</label></label>
                            </center>
                        </div>
