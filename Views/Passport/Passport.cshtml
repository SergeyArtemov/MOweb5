                        <input class="form-control" asp-for="CustomerCity" />
                        <label asp-for="CustomerAdressStreet">Улица:</label>
                        <input class="form-control" asp-for="CustomerAdressStreet" />
                        <label asp-for="CustomerAdressHouse">Дом:</label>
                        <input class="form-control" asp-for="CustomerAdressHouse" />
                        <label asp-for="CustomerAdressCorps">Корпус:</label>
                        <input class="form-control" asp-for="CustomerAdressCorps" />
                        <label asp-for="CustomerAdressApartment">Квартира:</label>
                        <input class="form-control" asp-for="CustomerAdressApartment" />

                        <input id="PageNext" class="form-control" asp-for="PageNext" hidden />
                        <input id="PageForShow" class="form-control" asp-for="PageForShow" hidden />
                        <input id="Customerid" class="form-control" asp-for="Customerid" hidden />
                        <input id="Host" class="form-control" asp-for="Host" hidden />
