                        <label asp-for="SurnameNerez">Фамилия(нерез):</label>
                        <input id="SurnameNerez" class="form-control" asp-for="SurnameNerez" />
                        <label asp-for="NameNerez">Имя(нерез):</label>
                        <input id="NameNerez" class="form-control" asp-for="NameNerez" />
                        <label asp-for="PatronymicNerez">Отчество(нерез):</label>
                        <input id="PatronymicNerez" class="form-control" asp-for="PatronymicNerez" />
                        <label asp-for="PassRangeNerez">Серия паспорта(нерез):</label>
                        <input id="PassRangeNerez" class="form-control" asp-for="PassRangeNerez" />
                        <label asp-for="PassNumberNerez">Номер паспорта(нерез):</label>
                        <input id="PassNumberNerez" class="form-control" asp-for="PassNumberNerez" />
                        <label asp-for="PassDepartmentAddrNerez">Адрес выдачи паспорта(нерез):</label>
                        <input id="PassDepartmentAddrNerez" class="form-control" asp-for="PassDepartmentAddrNerez" />
                        <label asp-for="PassIssueDateNerez">Дата выдачи паспорта(нерез):</label>
                        <input id="PassIssueDateNerez" class="form-control" asp-for="PassIssueDateNerez" />

                        <input id="PageNext" class="form-control" asp-for="PageNext" hidden />
                        <input id="PageForShow" class="form-control" asp-for="PageForShow" hidden />
                        <input id="Customerid" class="form-control" asp-for="Customerid" hidden />
                        <input id="Host" class="form-control" asp-for="Host" hidden />
                    </div>
                }

                @if (@Model.PageForShow == 3)
                {
