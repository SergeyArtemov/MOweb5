                    }

        td.col1 {
            background: red;
            color: white;
        }

        td.col2 {
            background: orange;
            color: black;
        }

        td.col3 {
            background: yellow;
            color: black;
        }

        td.col4 {
            background: white;
            color: black;
        }

        td.col5 {
            background: Green;
            color: white;
        }

        td.col6 {
            background: LightSalmon;
            color: white;
        }

