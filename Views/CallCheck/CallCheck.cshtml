                    }

                    table.elem1 td:nth-of-type(12), table.elem1 th:nth-of-type(12) {
                        width: 104px;
                    }

            table.elem2 {
                table-layout: fixed;
                width: 960px;
            }

                table.elem2 td {
                    overflow: hidden;
                }

                    table.elem2 td:nth-of-type(1), table.elem2 th:nth-of-type(1) {
